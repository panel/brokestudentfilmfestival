#carousel-winners.carousel.slide{'data-ride'=>'carousel'}
  %ol.carousel-indicators
    %li.active{'data-target'=>'#carousel-winners', 'data-slide-to'=>'0'}
    %li{'data-target'=>'#carousel-winners', 'data-slide-to'=>'1'}
    %li{'data-target'=>'#carousel-winners', 'data-slide-to'=>'2'}
    %li{'data-target'=>'#carousel-winners', 'data-slide-to'=>'3'}
    %li{'data-target'=>'#carousel-winners', 'data-slide-to'=>'4'}
    %li{'data-target'=>'#carousel-winners', 'data-slide-to'=>'5'}
    %li{'data-target'=>'#carousel-winners', 'data-slide-to'=>'6'}

  %div.carousel-inner
    %div.item.active
      = image_tag 'winners/1.png'
    %div.item
      = image_tag 'winners/2.png'
    %div.item
      = image_tag 'winners/3.png'
    %div.item
      = image_tag 'winners/4.png'
    %div.item
      = image_tag 'winners/5.png'
    %div.item
      = image_tag 'winners/6.png'
    %div.item
      = image_tag 'winners/7.png'

  / %a.left.carousel-control{'href'=>'#carousel-winners', 'data-slide'=>'prev'}
  /   %span.glyphicon.glyphicon-chevron-left

  / %a.right.carousel-control{'href'=>'#carousel-winners', 'data-slide'=>'next'}
  /   %span.glyphicon.glyphicon-chevron-right

